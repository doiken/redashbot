{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "outDir": ".build",
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./",
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
